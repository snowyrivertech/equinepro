import React, { useState, useEffect } from "react";
import { VetVisit } from "@/entities/VetVisit";
import { Horse } from "@/entities/Horse";
import { Link } from "react-router-dom";
import { createPageUrl } from "@/utils";
import { Card, CardContent, CardHeader, CardTitle } from "@/components/ui/card";
import { Button } from "@/components/ui/button";
import { Badge } from "@/components/ui/badge";
import { Plus, Stethoscope, ArrowRight, Calendar } from "lucide-react";
import { format, isFuture, parseISO } from "date-fns";

export default function VeterinaryRecords() {
  const [visits, setVisits] = useState([]);
  const [horses, setHorses] = useState([]);
  const [isLoading, setIsLoading] = useState(true);

  useEffect(() => {
    const loadData = async () => {
      try {
        const [allVisits, allHorses] = await Promise.all([
          VetVisit.list('-visit_date'),
          Horse.list()
        ]);
        setVisits(allVisits);
        setHorses(allHorses);
      } catch (error) {
        console.error("Error loading data:", error);
      } finally {
        setIsLoading(false);
      }
    };
    loadData();
  }, []);

  const getHorseName = (horseId) => horses.find(h => h.id === horseId)?.name || 'Unknown Horse';

  const upcomingAppointments = visits.filter(v => v.follow_up_date && isFuture(parseISO(v.follow_up_date)));
  const totalCost = visits.reduce((sum, v) => sum + (v.cost || 0), 0);
  
  if (isLoading) {
    return (
      <div className="flex items-center justify-center min-h-screen">
        <div className="animate-spin rounded-full h-12 w-12 border-b-2 border-amber-600"></div>
      </div>
    );
  }

  return (
    <div className="min-h-screen bg-gradient-to-br from-amber-50 via-orange-50 to-yellow-50 p-4 md:p-8">
      <div className="max-w-7xl mx-auto">
        <div className="flex flex-col md:flex-row justify-between items-start md:items-center mb-8 gap-4">
          <div>
            <h1 className="text-3xl font-bold text-gray-900 mb-2">Veterinary Records</h1>
            <p className="text-amber-700">Manage all veterinary visits and medical history.</p>
          </div>
          <Link to={createPageUrl("AddVetVisit")}>
            <Button className="bg-gradient-to-r from-amber-600 to-orange-600 hover:from-amber-700 hover:to-orange-700">
              <Plus className="w-4 h-4 mr-2" /> Add Vet Visit
            </Button>
          </Link>
        </div>

        {/* Stats Cards */}
        <div className="grid md:grid-cols-3 gap-6 mb-8">
          <Card><CardHeader><CardTitle>Total Visits</CardTitle></CardHeader><CardContent><p className="text-3xl font-bold">{visits.length}</p></CardContent></Card>
          <Card><CardHeader><CardTitle>Upcoming Follow-ups</CardTitle></CardHeader><CardContent><p className="text-3xl font-bold">{upcomingAppointments.length}</p></CardContent></Card>
          <Card><CardHeader><CardTitle>Total Billed</CardTitle></CardHeader><CardContent><p className="text-3xl font-bold">${totalCost.toLocaleString(undefined, {minimumFractionDigits: 2, maximumFractionDigits: 2})}</p></CardContent></Card>
        </div>

        {visits.length === 0 ? (
          <Card className="bg-white/70 backdrop-blur-sm border-amber-200"><CardContent className="text-center py-12">
            <Stethoscope className="w-16 h-16 text-amber-400 mx-auto mb-4" />
            <h3 className="text-xl font-semibold text-gray-900 mb-2">No Vet Records Found</h3>
            <p className="text-amber-700 mb-6">Start by logging the first vet visit.</p>
            <Link to={createPageUrl("AddVetVisit")}><Button className="bg-gradient-to-r from-amber-600 to-orange-600 hover:from-amber-700 hover:to-orange-700">Record First Visit</Button></Link>
          </CardContent></Card>
        ) : (
          <div className="space-y-4">
            {visits.map(visit => (
              <Card key={visit.id} className="bg-white/70 backdrop-blur-sm border-amber-200">
                <CardContent className="p-4 flex items-center justify-between">
                  <div className="flex items-center gap-4">
                     <div className="flex-shrink-0 w-12 h-12 rounded-lg bg-amber-100 flex items-center justify-center"><Stethoscope className="w-6 h-6 text-amber-600"/></div>
                     <div>
                        <p className="font-bold text-lg text-gray-900">{getHorseName(visit.horse_id)}</p>
                        <p className="text-sm text-gray-600">{visit.visit_type} with {visit.vet_name}</p>
                     </div>
                  </div>
                   <div className="text-right">
                     <p className="font-semibold text-gray-800">{format(parseISO(visit.visit_date), "MMM d, yyyy")}</p>
                     {visit.cost && <Badge className="mt-1" variant="secondary">${visit.cost.toFixed(2)}</Badge>}
                  </div>
                </CardContent>
              </Card>
            ))}
          </div>
        )}
      </div>
    </div>
  );
}
