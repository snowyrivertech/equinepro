import React from 'react';
import { Card, CardContent, CardHeader, CardTitle } from "@/components/ui/card";
import { Button } from "@/components/ui/button";
import { Link } from "react-router-dom";
import { createPageUrl } from "@/utils";
import { Stethoscope, Hammer, Utensils, ArrowRight, Calendar } from "lucide-react";
import { format, isFuture, isPast, differenceInDays } from "date-fns";

export default function HealthOverviews({ vetVisits, shoeingRecords, feedingSchedules, horses }) {
  const getUpcomingVetVisits = () => {
    return vetVisits
      .filter(v => v.follow_up_date && isFuture(new Date(v.follow_up_date)))
      .sort((a, b) => new Date(a.follow_up_date) - new Date(b.follow_up_date));
  };

  const getNextShoeingDue = () => {
    return shoeingRecords
      .filter(s => s.next_due_date && isFuture(new Date(s.next_due_date)))
      .sort((a, b) => new Date(a.next_due_date) - new Date(b.next_due_date));
  };
  
  const getHorseName = (horseId) => horses.find(h => h.id === horseId)?.name || 'Unknown Horse';

  const nextVetVisit = getUpcomingVetVisits()[0];
  const nextShoeing = getNextShoeingDue()[0];
  const morningFeedings = feedingSchedules.filter(f => f.time_of_day === 'Morning').length;

  return (
    <div className="grid md:grid-cols-3 gap-6">
      {/* Vet Overview */}
      <Card className="bg-white/70 backdrop-blur-sm border-amber-200">
        <CardHeader>
          <CardTitle className="flex items-center justify-between">
            <span className="flex items-center gap-2 text-amber-900"><Stethoscope className="w-5 h-5"/>Vet</span>
            <Link to={createPageUrl('VeterinaryRecords')}><Button variant="ghost" size="sm" className="text-amber-700 hover:bg-amber-100">View All <ArrowRight className="w-4 h-4 ml-1"/></Button></Link>
          </CardTitle>
        </CardHeader>
        <CardContent>
          {nextVetVisit ? (
            <div>
              <p className="text-sm text-gray-600">Next Appointment:</p>
              <p className="font-semibold text-lg text-gray-900">{getHorseName(nextVetVisit.horse_id)}</p>
              <div className="flex items-center gap-2 text-amber-700 mt-1">
                <Calendar className="w-4 h-4" />
                <span>{format(new Date(nextVetVisit.follow_up_date), "MMM d, yyyy")}</span>
              </div>
            </div>
          ) : (
            <p className="text-gray-600">No upcoming vet appointments scheduled.</p>
          )}
        </CardContent>
      </Card>
      
      {/* Shoeing Overview */}
      <Card className="bg-white/70 backdrop-blur-sm border-amber-200">
        <CardHeader>
          <CardTitle className="flex items-center justify-between">
            <span className="flex items-center gap-2 text-amber-900"><Hammer className="w-5 h-5"/>Shoeing</span>
            <Link to={createPageUrl('ShoeingRecords')}><Button variant="ghost" size="sm" className="text-amber-700 hover:bg-amber-100">View All <ArrowRight className="w-4 h-4 ml-1"/></Button></Link>
          </CardTitle>
        </CardHeader>
        <CardContent>
          {nextShoeing ? (
            <div>
              <p className="text-sm text-gray-600">Next Due:</p>
              <p className="font-semibold text-lg text-gray-900">{getHorseName(nextShoeing.horse_id)}</p>
              <div className="flex items-center gap-2 text-amber-700 mt-1">
                <Calendar className="w-4 h-4" />
                <span>{format(new Date(nextShoeing.next_due_date), "MMM d, yyyy")}</span>
              </div>
            </div>
          ) : (
            <p className="text-gray-600">No upcoming shoeing appointments.</p>
          )}
        </CardContent>
      </Card>

      {/* Feeding Overview */}
      <Card className="bg-white/70 backdrop-blur-sm border-amber-200">
        <CardHeader>
          <CardTitle className="flex items-center justify-between">
            <span className="flex items-center gap-2 text-amber-900"><Utensils className="w-5 h-5"/>Feeding</span>
             <Link to={createPageUrl('FeedingSchedules')}><Button variant="ghost" size="sm" className="text-amber-700 hover:bg-amber-100">View All <ArrowRight className="w-4 h-4 ml-1"/></Button></Link>
          </CardTitle>
        </CardHeader>
        <CardContent>
          <p className="text-sm text-gray-600">Morning Feedings:</p>
          <p className="font-semibold text-3xl text-gray-900">{morningFeedings}</p>
          <p className="text-gray-600 text-sm mt-1">Schedules active</p>
        </CardContent>
      </Card>
    </div>
  );
}
